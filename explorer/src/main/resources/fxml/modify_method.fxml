<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.CodeArea?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.naton1.jvmexplorer.fx.method.ModifyMethodController">
    <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Method" />
            <ComboBox fx:id="method" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Edit Type" />
            <ComboBox fx:id="modifyType" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" VBox.vgrow="ALWAYS">
            <children>
                <CodeArea fx:id="code" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <children>
                <TextArea fx:id="output" editable="false" prefHeight="150.0" promptText="Select the method to modify, select the modification type, and implement the modification. Compilation errors will show here." HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#onCompile" text="Compile" />
          <Button defaultButton="true" mnemonicParsing="false" onAction="#onModify" text="Modify" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
        </buttons>
         <VBox.margin>
            <Insets right="10.0" />
         </VBox.margin>
      </ButtonBar>
    </children>
</VBox>
